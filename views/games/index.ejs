<%- include('../_partials/head') %>

<h1>Game Search Results</h1>
<form class='search-form is-hoverable results' action='/games/search' method='GET'>
    <input class="input is-info results" type='text' name='title' placeholder='Search Games'>
    <button class="button is-link is-outlined is-rounded is-small results" type='submit'>Search</button>
</form>
<% gameData.forEach(function(game) { %>
    <article class="media">
        <figure class="media-left">
                <p><img src=<%= game.cover ? game.cover.url : "https://images.igdb.com/igdb/image/upload/t_cover_big/nocover_qhhlj6.jpg" %>></p>
        </figure>
            <div class="media-content">
                <div class="content">
                    <p><a href="/games/<%= game.id %>"><%= game.name %></a></p>
                    <p><%= game.platforms %></p>
                </div> 
            </div>
    </article>
 <% }); %>

<%- include('../_partials/footer') %>