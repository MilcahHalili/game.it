<%- include('./_partials/head') %>

    <div class="homepage-all">
        <div class="homepage-partners">
            <div class="homepage-partners2">
                <h1>Welcome to game.it!</h1>
                <h2>make friends. play games.</h2>
                <form action='/games/search' method='GET'>
                    <input class="input is-info search" type='text' name='title' placeholder='Search Games'>
                    <button class="button is-link is-outlined is-rounded is-small search" type='submit'>Search</button>
                </form>
            </div>
        </div>
        <h2>most popular games on game.it</h2>
        <ol>
        <% games.forEach( function(game) { %>
            <li><%= game.title %></li>
        <% }); %>
        </ol>
    </div>

